@page "/login"
@using Microsoft.AspNetCore.Components.Authorization
@using SoftwareProject.Client.Layout
@using SoftwareProject.Services
@layout WelcomePageLayout
@inject NavigationManager navigationManager
@inject AuthenticationStateProvider AuthStateProvider
@inject HttpClient http
@inject ISnackbar snackbar

<MudPaper Elevation="0" Style="background-color: transparent" Class="d-flex flex-column is-align-items-center">
    <MudText GutterBottom="true" Typo="Typo.h3"><b>Sign Up or Log In</b></MudText>
    <MudPaper Class="mt-4" Width="50%">
        <MudTabs Elevation="0" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
            <MudTabPanel Text="Log In">
                <EditForm Model=@loginModel FormName="loginForm" OnValidSubmit="AttemptLogin">
                    <DataAnnotationsValidator/>
                    <MudCard Elevation="0" Class="p-0">
                        <MudCardContent>
                            <MudText GutterBottom="true" Typo="Typo.h4"><b>Log In</b></MudText>
                            <MudTextField @bind-Value="loginModel.email" T="string" Label="Email"  id="login-email" Class="mt-3"/>
                            <MudTextField @bind-Value="loginModel.password" T="string" Label="Password" id="login-password" HelperText="Choose a strong password" Class="mt-3"
                                          InputType="InputType.Password"/>
                        </MudCardContent>
                        <MudCardActions>
                            <MudButton Disabled="AttemptingLogin" ButtonType="ButtonType.Submit" id="login-button" Variant="Variant.Filled" Color="Color.Primary"
                                       Class="ml-auto">
                                @if (AttemptingLogin)
                                {
                                    <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true"/>
                                    <MudText Class="ms-2">
                                        Logging in...
                                    </MudText>
                                }
                                else
                                {
                                    <MudText>Log In</MudText>
                                }
                            </MudButton>
                        </MudCardActions>
                        <MudText Color="@Color.Error">
                            <ValidationSummary />
                        </MudText>
                    </MudCard>
                </EditForm>
            </MudTabPanel>
            <MudTabPanel Text="Sign Up">
                <EditForm Model=@registerModel FormName="RegisterForm" OnValidSubmit="AttemptRegister">
                    <DataAnnotationsValidator/>
                    <MudCard Elevation="0" Class="p-0">
                        <MudCardContent>
                            <MudText GutterBottom="true" Typo="Typo.h4"><b>Sign Up</b></MudText>
                            <MudTextField @bind-Value="registerModel.email" T="string" Label="Email" Class="mt-3"/>
                            <MudTextField @bind-Value="registerModel.username" T="string" Label="Username" Class="mt-3"/>
                            <MudTextField @bind-Value="registerModel.firstPassword" T="string" Label="Password" HelperText="Choose a strong password" Class="mt-3"
                                          InputType="InputType.Password"/>
                            <MudTextField @bind-Value="registerModel.secondPassword" T="string" Label="Password" HelperText="Repeat the password" Class="mt-3"
                                          InputType="InputType.Password"/>
                        </MudCardContent>
                        <MudCardActions>
                            <MudButton Disabled="AttemptingLogin" ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary"
                                       Class="ml-auto">
                                @if (AttemptingLogin)
                                {
                                    <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true"/>
                                    <MudText Class="ms-2">Registering...</MudText>
                                }
                                else
                                {
                                    <MudText>Register</MudText>
                                }
                            </MudButton>
                        </MudCardActions>
                        <MudText Color="@Color.Error">
                            <ValidationSummary />
                        </MudText>
                    </MudCard>
                </EditForm>
            </MudTabPanel>
        </MudTabs>
    </MudPaper>
</MudPaper>


