{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../Greggs-Project",
          "files": [
            "/SoftwareProject/SoftwareProject.csproj",
            "/SoftwareProject.Client/SoftwareProject.Client.csproj",
            "/FrontEndTests/FrontEndTests.csproj",
            "UnitTests/UnitTests.csproj"
          ]
        }
      ],
      "dest": "api",
      "properties": {
        "TargetFramework": "net9.0" 
      }

    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Software Project Documentation",
      "_appTitle": "Software Project Documentation",
      "_enableSearch": true,
      "pdf": true
    }
  }
}