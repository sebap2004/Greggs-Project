@page "/login"
@using SoftwareProject.Components.Layout
@using SoftwareProject.Services
@layout WelcomePageLayout
@inject AccountService accountService
@inject NavigationManager navigationManager
@inject HttpClient http

<MudPaper Elevation="0" Style="background-color: transparent" Class="d-flex flex-column is-align-items-center">
    <MudText GutterBottom="true" Typo="Typo.h3"><b>Sign Up or Log In</b></MudText>
    <MudPaper Class="mt-4" Width="50%">
        <MudTabs Elevation="0" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
            <MudTabPanel Text="Sign Up">
                <EditForm Model=@account OnValidSubmit="registerModel.RegisterAccount">
                    <DataAnnotationsValidator/>
                    <MudCard Elevation="0" Class="p-0">
                        <MudCardContent>
                            <MudText GutterBottom="true" Typo="Typo.h4"><b>Sign Up</b></MudText>
                            <MudTextField @bind-Value="account.email" T="string" Label="Email" Class="mt-3"/>
                            <MudTextField @bind-Value="account.username" T="string" Label="Username" Class="mt-3"/>
                            <MudTextField @bind-Value="registerModel.firstPassword" T="string" Label="Password" HelperText="Choose a strong password" Class="mt-3"
                                          InputType="InputType.Password"/>
                            <MudTextField @bind-Value="registerModel.secondPassword" T="string" Label="Password" HelperText="Repeat the password" Class="mt-3"
                                          InputType="InputType.Password"/>
                        </MudCardContent>
                        <MudCardActions>
                            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary"
                                       Class="ml-auto">Register
                            </MudButton>
                        </MudCardActions>
                    </MudCard>
                </EditForm>
            </MudTabPanel>
            <MudTabPanel Text="Sign In">
                <EditForm Model=@account OnValidSubmit="loginModel.LoginSubmit">
                    <DataAnnotationsValidator/>
                    <MudCard Elevation="0" Class="p-0">
                        <MudCardContent>
                            <MudText GutterBottom="true" Typo="Typo.h4"><b>Log In</b></MudText>
                            <MudTextField @bind-Value="account.email" T="string" Label="Email"  id="email" Class="mt-3"/>
                            <MudTextField @bind-Value="account.password" T="string" Label="Password"  id="password" HelperText="Choose a strong password" Class="mt-3"
                                          InputType="InputType.Password"/>
                        </MudCardContent>
                        <MudCardActions>
                            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary"
                                       Class="ml-auto">Log In
                            </MudButton>
                        </MudCardActions>
                    </MudCard>
                </EditForm>
            </MudTabPanel>
        </MudTabs>
    </MudPaper>
</MudPaper>


